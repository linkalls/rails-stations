<%= form_with(model: @movie_schedule, data: { turbo_confirm: 'Are you sure?' }, url: admin_movie_schedule_path(@movie_id, @schedule_id), method: :put) do |f| %>
  <%= f.label :start_time, "開始時刻" %>
  <%= f.text_field :start_time %>
  <%= f.label :end_time, "終了時刻" %>
  <%= f.text_field :end_time %>
  <%= f.submit "更新する" %>
<% end %>
<%= button_to "削除する", admin_movie_schedule_path, data: { method: :delete, turbo_confirm: "削除しますか" } %>